<p id="notice"><%= notice %></p>

<h1>Wineries</h1>

<table>
  <thead>
    <tr>
      <th>ID</th>
      <th>Name</th>
      <th>Created at</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @wineries.each do |winery| %>
      <tr>
        <td><%= winery.id %></td>
        <td><%= winery.name %></td>
        <td><%= winery.created_at %></td>
        <td><%= link_to 'Show', winery %></td>
        <td><%= link_to 'Edit', edit_winery_path(winery) %></td>
        <td><%= link_to 'Destroy', winery, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <td>
        <td><%= button_to '<' ,{:controller => 'my_wineries', :action => 'create', params: { my_winery: { winery_id: winery.id, my_wine_cellar_id:@my_wine_cellar.id }} }, {:method => :post} %></td>
        </td>

      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Winery', new_winery_path %>
